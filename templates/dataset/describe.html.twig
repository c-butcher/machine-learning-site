{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="mt-5 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 font-weight-normal">{{ dataset.name }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}

                            <div class="buttons float-right">
                                <input type="submit" class="btn btn-primary" value="Continue" />
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
