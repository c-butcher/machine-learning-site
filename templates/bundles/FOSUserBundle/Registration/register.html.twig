{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="mt-5 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12 offset-sm-0">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 font-weight-normal">{{ 'Please Register'|trans }}</h1>
                    </div>
                    <div class="card-body">
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form'}}) }}

                        <div class="form-group">
                            {{ form_label(form.username, "Display Name"|trans) }}
                            {{ form_widget(form.username, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, "Email Address"|trans) }}
                            {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, "Password"|trans) }}
                            {{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, "Confirm Password"|trans) }}
                            {{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ 'Register'|trans }}" />
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
