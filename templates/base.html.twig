<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta charset="UTF-8">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha256-YLGeXaapI0/5IgZopewRJcFXomhRMlYYjugPLSyNjTY=" crossorigin="anonymous" />
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <div class="navbar navbar-dark bg-dark shadow-sm">
                <div class="container d-flex justify-content-between">
                    <a href="/" class="navbar-brand d-flex align-items-center">
                        <strong>Machine Learning</strong>
                    </a>
                    <nav id="navigation" class="my-2 my-md-0 mr-md-3">
                        <a class="p-2 text-light" href="/">Home</a>
                        {% if app.user %}
                            <a class="p-2 text-light" href="{{ path('fos_user_security_logout') }}">Logout</a>
                        {% else %}
                            <a class="p-2 text-light" href="{{ path('fos_user_security_login') }}">Login</a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        {% endblock %}

        <div id="main" class="main" role="main">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
