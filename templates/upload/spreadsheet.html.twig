{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="mt-5 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12 offset-sm-0">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 font-weight-normal">{{ 'Upload Spreadsheet'|trans }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Name'|trans } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.type, { 'attr': { 'class': 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            <div class="custom-file">
                                {{ form_widget(form.uploadedFile, { 'attr': { 'class': 'custom-file-input' } }) }}
                                {{ form_label(form.uploadedFile, 'Choose Spreadsheet'|trans, { 'label_attr' : { 'class': 'custom-file-label' } }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                {{ form_widget(form.hasColumnLabels, { 'attr': { 'class': 'custom-control-input' } }) }}
                                {{ form_label(form.hasColumnLabels, 'Columns have labels on first row'|trans, { 'label_attr': { 'class': 'custom-control-label' } }) }}
                            </div>
                        </div>

                        <input type="submit" id="_submit" name="_submit"class="btn btn-lg btn-primary btn-block" value="{{ 'Upload'|trans }}" />
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
